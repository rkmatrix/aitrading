# ============================================
# AITradingBot Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git - it contains secrets!

# ============================================
# ALPACA API CREDENTIALS (REQUIRED)
# ============================================
APCA_API_KEY_ID=your_alpaca_api_key_here
APCA_API_SECRET_KEY=your_alpaca_secret_key_here
APCA_API_BASE_URL=https://paper-api.alpaca.markets

# ============================================
# TRADING MODE (REQUIRED)
# ============================================
MODE=PAPER

# ============================================
# DASHBOARD CONFIGURATION (OPTIONAL)
# ============================================
DASHBOARD_SECRET_KEY=change-this-to-a-random-secret-key-in-production
PORT=5000
FLASK_ENV=development
